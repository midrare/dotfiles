{
  "layer": "top",
  "position": "bottom",
  "height": 40,
  "modules-left": ["nwg-menu", "hyprland/workspaces", "wlr/taskbar"],
  "modules-center": [],
  "modules-right": ["tray", "clock"],
  "tray": {
    "spacing": 5,
  },
  "hyprland/workspaces": {
    "format": "{name}",
  },
  "wlr/taskbar": {
    "format": "{icon}   {title:.25}",
    "markup": true,
    "icon-size": 20,
    "on-click": "activate",
  },
  "clock": {
    "format": "{:>%I:%M %p \n %Y/%m/%d}",
    "interval": 1,
    "align": 1,
    "justify": "right",
  },
  "custom/power": {
    "format": "‚èª",
    "tooltip": "Power Off",
    "on-click": "poweroff",
  },
}
